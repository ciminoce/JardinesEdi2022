@using PagedList.Mvc
@model PagedList.IPagedList<JardinesEdti2022.Web.Models.ViewModels.Categoria.CategoriaListVm>

@{
    ViewBag.Title = "Index";
}
<div class="d-flex justify-content-between mt-3">
    <h2>Listado de Categorías</h2>

    <p>
        @Html.ActionLink("Nueva", "Create", null, new { @class = "btn btn-primary" })
    </p>

</div>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NombreCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoriaId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "Details", new { id = item.CategoriaId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoriaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
Pag.: @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) de @Model.PageCount
<br />
Total Items @Model.TotalItemCount
@Html.PagedListPager(Model, page => @Url.Action("Index", "Categoria", new { page, pageSize = 10 }))